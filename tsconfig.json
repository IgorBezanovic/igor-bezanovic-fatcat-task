{
    "compilerOptions": {
        "baseUrl": "src/",
        "paths": {
          "@homework-task/*": ["*"],
        },
        "types": ["node", "vite/client"],
        "target": "ES6",
        "module": "ES2020",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
      },
    "include": [
      "src",
      "vite.config.ts"
    ],
    "exclude": ["node_modules"]
  }
  